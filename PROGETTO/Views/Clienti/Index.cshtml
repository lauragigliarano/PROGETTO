@model IEnumerable<PROGETTO.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<div class="pageTitle">
    <span>Gestione clienti</span>
</div>

<button>
    @Html.ActionLink("Create New", "Create")
</button>
<table class="table">
    <tr class="thead">
        <th>
            @Html.DisplayNameFor(model => model.ClienteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RagioneSociale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ClienteID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RagioneSociale)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefono)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mail)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ClienteID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ClienteID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ClienteID })
    </td>
</tr>
}

</table>
